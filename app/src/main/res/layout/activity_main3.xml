<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#B0C4DE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/otp_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Check your OTP Key"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"/>

        <TextView
            android:id="@+id/otp_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="OTP Key"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:background="@color/white"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/otp_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Authenticator 앱에 해당 키를 입력하여 생성된 OTP 코드를 확인한 후 아래에 OTP 번호를 입력해주세요!"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/otp_input"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <Button
            android:id="@+id/input_otp_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Open Door"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/main_btn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="메인 화면"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>