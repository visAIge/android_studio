<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="50dp"
            android:src="@drawable/user_info_background" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/user_info_basic" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/user_info_textview_custom"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="이름  "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"/>

        <TextView
            android:id="@+id/user_info_name_data"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/user_info_textview_custom"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/user_info_id"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="아이디  "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"/>

        <TextView
            android:id="@+id/user_info_id_data"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/user_info_textview_custom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_info_otp"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="OTP 계정  "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"
            />

        <TextView
            android:id="@+id/user_info_otp_data"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquareneo_brg"/>
    </LinearLayout>

    <Button
        android:id="@+id/userInfo_main_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_style"
        android:text="메인화면으로 이동"
        android:textColor="#000000" />
</LinearLayout>